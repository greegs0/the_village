
<div>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card border rounded-4 shadow-sm">
          <div class="card-body p-4 p-md-5">

            <!-- Header -->
            <div class="text-center mb-4">
              <svg width="120" height="120" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="mx-auto mb-3">
                <defs>
                  <radialGradient id="bgGradFamily" cx="50%" cy="50%" r="50%">
                    <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1"/>
                    <stop offset="100%" style="stop-color:#f3f4f6;stop-opacity:1"/>
                  </radialGradient>
                  <linearGradient id="houseGradFamily" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#667eea;stop-opacity:1"/>
                    <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1"/>
                  </linearGradient>
                </defs>
                <circle cx="100" cy="100" r="95" fill="url(#bgGradFamily)"/>
                <g transform="translate(50,40)">
                  <path d="M 20 40 L 50 15 L 80 40 L 80 85 L 20 85 Z" fill="url(#houseGradFamily)" stroke="#4F46E5" stroke-width="3"/>
                  <rect x="38" y="60" width="24" height="25" fill="#ffffff" opacity="0.9" rx="2"/>
                  <circle cx="40" cy="35" r="5" fill="#ffffff" opacity="0.95"/>
                  <circle cx="60" cy="35" r="5" fill="#ffffff" opacity="0.95"/>
                  <path d="M 0 55 L 20 40 L 40 55 L 40 85 L 0 85 Z" fill="#667eea" opacity="0.85"/>
                  <rect x="12" y="68" width="16" height="17" fill="#ffffff" opacity="0.8" rx="1"/>
                  <path d="M 60 55 L 80 40 L 100 55 L 100 85 L 60 85 Z" fill="#764ba2" opacity="0.85"/>
                  <rect x="72" y="68" width="16" height="17" fill="#ffffff" opacity="0.8" rx="1"/>
                  <circle cx="10" cy="90" r="6" fill="#10b981" opacity="0.7"/>
                  <rect x="9" y="90" width="2" height="10" fill="#059669"/>
                  <circle cx="90" cy="90" r="6" fill="#10b981" opacity="0.7"/>
                  <rect x="89" y="90" width="2" height="10" fill="#059669"/>
                </g>
              </svg>
              <h1 class="h4 mb-2">Créer votre famille</h1>
              <p class="text-secondary">Donnez un nom à votre foyer pour commencer l'aventure</p>
            </div>

            <!-- Form -->
            <%= simple_form_for @family do |f| %>

              <%= f.error_notification %>

              <div class="mb-3">
                <%= f.input :name,
                            label: "Nom de la famille",
                            required: true,
                            input_html: {
                              class: "form-control",
                              placeholder: "Famille Dupont"
                            } %>
              </div>

              <%= f.button :submit, "Créer la famille", class: "btn btn-dark w-100 mt-2" %>

            <% end %>

            <!-- Divider -->
            <div class="position-relative my-4">
              <hr>
              <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 text-muted">ou</span>
            </div>

            <!-- Retour -->
            <div class="text-center">
              <%= link_to "Retour au dashboard", families_path, class: "text-secondary" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
