<div class="auth-page">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card border rounded-4 shadow-sm">
          <div class="card-body p-4 p-md-5">
            <!-- Logo -->
            <div class="text-center mb-4">
              <%= image_tag "the-village-icon.svg", alt: "The Village Logo", class: "mb-3", style: "width: 80px; height: 80px;" %>
              <h1 class="h4 mb-2 auth-title">Bienvenue sur The Village</h1>
              <p class="auth-subtitle">Créez votre compte pour rejoindre votre communauté</p>
            </div>

            <!-- Tabs -->
            <ul class="nav nav-pills nav-fill rounded-3 p-1 mb-4 auth-tabs">
              <li class="nav-item">
                <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <button class="nav-link active">Inscription</button>
              </li>
            </ul>

            <!-- Signup Form -->
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <% if resource.errors.any? %>
                <div class="alert alert-danger">
                  <ul class="mb-0">
                    <% resource.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <!-- Nom complet -->
              <div class="mb-3">
                <%= f.input :name,
                            required: true,
                            autofocus: true,
                            label: "Nom complet",
                            label_html: { class: "auth-label" },
                            input_html: {
                              autocomplete: "name",
                              placeholder: "Jean Dupont",
                              class: "form-control auth-input"
                            } %>
              </div>

              <!-- Email -->
              <div class="mb-3">
                <%= f.input :email,
                            required: true,
                            label: "Email",
                            label_html: { class: "auth-label" },
                            input_html: {
                              autocomplete: "email",
                              placeholder: "votreemail@exemple.com",
                              class: "form-control auth-input"
                            } %>
              </div>

              <!-- Date de naissance -->
              <div class="mb-3">
                <%= f.input :birthday,
                            as: :date,
                            label: "Date de naissance",
                            label_html: { class: "auth-label" },
                            start_year: Date.today.year - 100,
                            end_year: Date.today.year,
                            order: [:day, :month, :year],
                            input_html: { autocomplete: "bday", class: "auth-input" } %>
              </div>

              <!-- Code postal -->
              <div class="mb-3">
                <%= f.input :zipcode,
                            required: true,
                            label: "Code postal",
                            label_html: { class: "auth-label" },
                            input_html: {
                              autocomplete: "postal-code",
                              placeholder: "75001",
                              class: "form-control auth-input",
                              maxlength: 5
                            } %>
              </div>

              <!-- Mot de passe -->
              <div class="mb-3">
                <%= f.input :password,
                            required: true,
                            label: "Mot de passe",
                            label_html: { class: "auth-label" },
                            hint: (@minimum_password_length ? "#{@minimum_password_length} caractères minimum" : ""),
                            hint_html: { class: "auth-hint" },
                            input_html: {
                              autocomplete: "new-password",
                              placeholder: "••••••••",
                              class: "form-control auth-input"
                            } %>
              </div>

              <!-- Confirmation mot de passe -->
              <div class="mb-3">
                <%= f.input :password_confirmation,
                            required: true,
                            label: "Confirmation du mot de passe",
                            label_html: { class: "auth-label" },
                            input_html: {
                              autocomplete: "new-password",
                              placeholder: "••••••••",
                              class: "form-control auth-input"
                            } %>
              </div>

              <%= f.button :submit, "Créer mon compte", class: "btn btn-primary w-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .auth-title {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 600;
  }

  .auth-subtitle {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.7) 0%, rgba(118, 75, 162, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .auth-label {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 500;
  }

  .auth-hint {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.6) 0%, rgba(118, 75, 162, 0.6) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 0.85em;
  }

  .auth-tabs {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  }

  .auth-tabs .nav-link {
    color: #667eea;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .auth-tabs .nav-link:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  }

  .auth-tabs .nav-link.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white !important;
    -webkit-text-fill-color: white;
  }

  .auth-input:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
  }
</style>
