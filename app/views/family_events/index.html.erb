<!-- SVG Gradient Definitions -->
<svg width="0" height="0" style="position: absolute;">
  <defs>
    <linearGradient id="iconGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea"/>
      <stop offset="100%" style="stop-color:#764ba2"/>
    </linearGradient>
    <linearGradient id="trashGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ef4444"/>
      <stop offset="100%" style="stop-color:#b91c1c"/>
    </linearGradient>
  </defs>
</svg>

<!-- Main Content -->
<div class="container-fluid px-4 px-lg-5 py-4">
  <!-- Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <div>
      <h1 class="h2 mb-2 dashboard-title">Calendrier Familial</h1>
      <p class="text-secondary mb-0">Organisez les gardes, anniversaires et événements</p>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-primary-gradient" data-bs-toggle="modal" data-bs-target="#newEventModal">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
          <line x1="12" y1="5" x2="12" y2="19"/>
          <line x1="5" y1="12" x2="19" y2="12"/>
        </svg>
        Nouvel événement
      </button>
    </div>
  </div>

  <!-- Tab Content -->
  <div class="tab-content">
    <div class="tab-pane fade show active" id="month">
      <!-- Calendar -->
      <div class="card stat-card rounded-4 mb-4">
        <div class="card-body p-3 p-md-4">
          <!-- Calendar Header -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center gap-2">
              <%= link_to family_family_events_path(@family, date: (@current_date - 1.month).to_s), class: "btn btn-nav-calendar" do %>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"/>
                </svg>
              <% end %>
              <h5 class="mb-0 dashboard-section-title"><%= I18n.l(@current_date, format: :month_and_year) %></h5>
              <%= link_to family_family_events_path(@family, date: (@current_date + 1.month).to_s), class: "btn btn-nav-calendar" do %>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              <% end %>
            </div>
            <%= link_to family_family_events_path(@family), class: "btn btn-today" do %>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              Aujourd'hui
            <% end %>
          </div>

          <!-- Calendar Grid -->
          <div class="table-responsive">
            <table class="table calendar-table text-center mb-0">
              <thead>
                <tr>
                  <th class="calendar-header">Lun</th>
                  <th class="calendar-header">Mar</th>
                  <th class="calendar-header">Mer</th>
                  <th class="calendar-header">Jeu</th>
                  <th class="calendar-header">Ven</th>
                  <th class="calendar-header">Sam</th>
                  <th class="calendar-header">Dim</th>
                </tr>
              </thead>
              <tbody>
                <% @calendar_weeks.each do |week| %>
                  <tr>
                    <% week.each do |day| %>
                      <%
                        is_today = day == Date.today
                        is_weekend = day.saturday? || day.sunday?
                        is_current_month = day.month == @current_date.month
                        day_events = @family_events.select do |e|
                          next false unless e.start_date
                          event_end = e.end_date || e.start_date
                          day >= e.start_date && day <= event_end
                        end
                        day_tasks_count = @tasks_by_date[day] || 0
                      %>
                      <td class="calendar-cell <%= 'calendar-weekend' if is_weekend %> <%= 'calendar-today' if is_today %>" style="width: 14.28%; height: 140px; min-height: 140px; max-height: 140px; min-width: 120px; vertical-align: top; overflow: hidden; padding: 8px;">
                        <div class="calendar-day-number <%= 'text-muted' unless is_current_month %>">
                          <span class="<%= 'today-number' if is_today %>"><%= day.day %></span>
                        </div>
                        <%= link_to family_tasks_path(@family, date: day), class: "task-count-badge mb-1", style: "text-decoration: none;" do %>
                          <span class="badge task-day-badge <%= 'task-day-badge-empty' if day_tasks_count == 0 %>">
                            <% if day_tasks_count > 0 %>
                              <%= day_tasks_count %> tâche<%= 's' if day_tasks_count > 1 %>
                            <% else %>
                              Aucune tâche
                            <% end %>
                          </span>
                        <% end %>
                        <div style="max-height: 70px; overflow-y: auto; overflow-x: hidden; display: flex; flex-direction: column; align-items: center;">
                          <% day_events.each do |event| %>
                            <div class="badge event-badge small mb-1"
                                 style="cursor: pointer; background-color: <%= event.event_color %>; color: #1f2937; font-weight: 500; text-align: center; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 95%; padding: 4px 8px; border-radius: 6px; text-shadow: 0 0 2px rgba(255,255,255,0.5);"
                                 data-bs-toggle="modal"
                                 data-bs-target="#eventDetailsModal"
                                 data-event-id="<%= event.id %>"
                                 data-event-title="<%= event.title %>"
                                 data-event-type="<%= event.type_name %>"
                                 data-event-type-value="<%= event.event_type %>"
                                 data-event-date="<%= event.formatted_date %>"
                                 data-event-start-date="<%= event.start_date %>"
                                 data-event-time="<%= event.formatted_time %>"
                                 data-event-time-value="<%= event.time&.strftime('%H:%M') %>"
                                 data-event-location="<%= event.location %>"
                                 data-event-description="<%= event.description %>"
                                 data-event-assigned="<%= event.assigned_to %>"
                                 data-event-icon="<%= event.event_icon %>"
                                 data-event-badge="<%= event.badge_class %>"
                                 data-event-reminders="<%= event.reminders_enabled %>">
                              <%= event.title %>
                            </div>
                          <% end %>
                        </div>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Unavailability Section -->
      <div class="card stat-card rounded-4 mb-4">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
              <div class="icon-wrapper me-3">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10" stroke="url(#iconGradient)"/>
                  <line x1="4.93" y1="4.93" x2="19.07" y2="19.07" stroke="url(#iconGradient)"/>
                </svg>
              </div>
              <div>
                <h5 class="mb-1 dashboard-section-title">Indisponibilités</h5>
                <p class="text-secondary small mb-0">Bloquez des dates où vous n'êtes pas disponible</p>
              </div>
            </div>
            <button class="btn btn-add-unavail btn-sm" data-bs-toggle="modal" data-bs-target="#unavailabilityModal">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
              </svg>
              Ajouter
            </button>
          </div>

          <div class="d-flex flex-column gap-3">
            <% unavailabilities = @family_events.select { |e| e.event_type == 'indisponibilite' } %>
            <% if unavailabilities.any? %>
              <% unavailabilities.each do |unavail| %>
                <div class="d-flex justify-content-between align-items-center unavail-item rounded-3 p-3">
                  <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                      <span class="fw-medium text-white"><%= unavail.assigned_to&.first&.upcase || '?' %></span>
                    </div>
                    <div>
                      <div class="fw-medium"><%= unavail.assigned_to || 'Non assigné' %> <span class="text-secondary">indisponible</span></div>
                      <small class="text-secondary"><%= unavail.formatted_date %></small>
                      <% if unavail.description.present? %>
                        <div class="small text-muted"><%= unavail.description %></div>
                      <% end %>
                    </div>
                  </div>
                  <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-edit-small"
                            data-bs-toggle="modal"
                            data-bs-target="#eventDetailsModal"
                            data-event-id="<%= unavail.id %>"
                            data-event-title="<%= unavail.title %>"
                            data-event-type="<%= unavail.type_name %>"
                            data-event-type-value="<%= unavail.event_type %>"
                            data-event-date="<%= unavail.formatted_date %>"
                            data-event-start-date="<%= unavail.start_date %>"
                            data-event-time="<%= unavail.formatted_time %>"
                            data-event-time-value="<%= unavail.time&.strftime('%H:%M') %>"
                            data-event-location="<%= unavail.location %>"
                            data-event-description="<%= unavail.description %>"
                            data-event-assigned="<%= unavail.assigned_to %>"
                            data-event-icon="<%= unavail.event_icon %>"
                            data-event-badge="<%= unavail.badge_class %>"
                            data-event-reminders="<%= unavail.reminders_enabled %>">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" stroke="url(#iconGradient)"/>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" stroke="url(#iconGradient)"/>
                      </svg>
                    </button>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-4 empty-state rounded-3">
                <div class="mb-2">
                  <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" stroke="url(#iconGradient)"/>
                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07" stroke="url(#iconGradient)"/>
                  </svg>
                </div>
                <p class="mb-0 text-muted">Aucune indisponibilité pour le moment</p>
                <small class="text-muted">Cliquez sur "Ajouter" pour bloquer une période</small>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Legend and Upcoming Events -->
      <div class="row g-4">
        <div class="col-lg-6">
          <div class="card stat-card rounded-4 h-100">
            <div class="card-body p-4">
              <h5 class="mb-1 dashboard-section-title">Légende</h5>
              <p class="text-secondary small mb-4">Types d'événements</p>

              <div class="d-flex flex-column gap-2">
                <div class="d-flex align-items-center gap-2">
                  <div class="rounded" style="width: 16px; height: 16px; background-color: #F0ABFC;"></div>
                  <span class="small">Anniversaire</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <div class="rounded" style="width: 16px; height: 16px; background-color: #7684ff;"></div>
                  <span class="small">Garde d'enfant</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <div class="rounded" style="width: 16px; height: 16px; background-color: #FDA4AF;"></div>
                  <span class="small">Rendez-vous médical</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <div class="rounded" style="width: 16px; height: 16px; background-color: #75e79f;"></div>
                  <span class="small">Événement scolaire</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <div class="rounded" style="width: 16px; height: 16px; background-color: #7DD3FC;"></div>
                  <span class="small">Vacances</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <div class="rounded" style="width: 16px; height: 16px; background-color: #ffe181;"></div>
                  <span class="small">Autre</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card stat-card rounded-4 h-100">
            <div class="card-body p-4">
              <h5 class="mb-1 dashboard-section-title">Prochains événements</h5>
              <p class="text-secondary small mb-4">Dans les 7 prochains jours</p>

              <div class="d-flex flex-column gap-3">
                <% if @upcoming_events.any? %>
                  <% @upcoming_events.each do |event| %>
                    <div class="d-flex align-items-center gap-3">
                      <div class="rounded event-icon-box" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background-color: <%= event.event_color %>20; border: 1px solid <%= event.event_color %>40;">
                        <span style="font-size: 18px;"><%= event.event_icon %></span>
                      </div>
                      <div>
                        <div class="fw-medium"><%= event.title %></div>
                        <small class="text-secondary">
                          <%= l(event.start_date, format: :short) %>
                          <% if event.time.present? %>
                            - <%= event.time.strftime("%H:%M") %>
                          <% end %>
                        </small>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <div class="text-center py-4 empty-state rounded-3">
                    <div class="mb-2">
                      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <defs>
                          <linearGradient id="emptyCalendarGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:#667eea"/>
                            <stop offset="100%" style="stop-color:#764ba2"/>
                          </linearGradient>
                        </defs>
                        <rect x="3" y="4" width="18" height="18" rx="2" stroke="url(#emptyCalendarGradient)"/>
                        <line x1="16" y1="2" x2="16" y2="6" stroke="url(#emptyCalendarGradient)"/>
                        <line x1="8" y1="2" x2="8" y2="6" stroke="url(#emptyCalendarGradient)"/>
                        <line x1="3" y1="10" x2="21" y2="10" stroke="url(#emptyCalendarGradient)"/>
                        <circle cx="8" cy="14" r="1" fill="url(#emptyCalendarGradient)"/>
                        <circle cx="12" cy="14" r="1" fill="url(#emptyCalendarGradient)"/>
                        <circle cx="16" cy="14" r="1" fill="url(#emptyCalendarGradient)"/>
                        <circle cx="8" cy="18" r="1" fill="url(#emptyCalendarGradient)"/>
                        <circle cx="12" cy="18" r="1" fill="url(#emptyCalendarGradient)"/>
                      </svg>
                    </div>
                    <p class="mb-0 text-muted">Aucun événement à venir dans les 7 prochains jours</p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- Modal Indisponibilité -->
<div class="modal fade" id="unavailabilityModal" tabindex="-1" aria-labelledby="unavailabilityModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4" style="border: 1px solid rgba(102, 126, 234, 0.2);">
      <div class="modal-header border-0 pb-0">
        <div>
          <h5 class="modal-title fw-medium dashboard-section-title" id="unavailabilityModalLabel">Bloquer une période d'indisponibilité</h5>
          <p class="text-secondary small mb-0">Indiquez quand vous n'êtes pas disponible pour les tâches familiales</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-3">
        <%= form_with(model: [@family, @family_event || FamilyEvent.new], local: true, html: { id: 'unavailabilityForm' }) do |f| %>
          <%= f.hidden_field :event_type, value: 'indisponibilite' %>

          <!-- Qui est indisponible -->
          <div class="mb-3">
            <%= f.label :assigned_to, "Qui est indisponible ?", class: "form-label fw-medium" %>
            <%= f.select :assigned_to, options_for_select(
              [['Sélectionner un membre', '']] + @family_members.map { |member| [member.name, member.name] }
            ), {}, { class: "form-select form-select-custom", required: true } %>
          </div>

          <!-- Date de début et Date de fin -->
          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <%= f.label :start_date, "Date de début", class: "form-label fw-medium" %>
              <%= f.date_field :start_date, class: "form-control form-control-custom", required: true %>
            </div>
            <div class="col-md-6">
              <%= f.label :end_date, "Date de fin", class: "form-label fw-medium" %>
              <%= f.date_field :end_date, class: "form-control form-control-custom" %>
            </div>
          </div>

          <!-- Raison (optionnel) -->
          <div class="mb-4">
            <%= f.label :description, "Raison (optionnel)", class: "form-label fw-medium" %>
            <%= f.text_field :description, class: "form-control form-control-custom", placeholder: "Ex: Déplacement professionnel" %>
          </div>

          <%= f.hidden_field :reminders_enabled, value: false %>

          <!-- Submit Button -->
          <%= f.submit "Bloquer cette période", class: "btn btn-primary-gradient w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal Nouvel Événement -->
<div class="modal fade" id="newEventModal" tabindex="-1" aria-labelledby="newEventModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4" style="border: 1px solid rgba(102, 126, 234, 0.2);">
      <div class="modal-header border-0 pb-0">
        <div>
          <h5 class="modal-title fw-semibold mb-1" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;" id="newEventModalLabel">Créer un nouvel événement</h5>
          <p class="text-secondary small mb-0">Ajoutez un événement au calendrier familial</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-3">
        <%= form_with(model: [@family, @family_event || FamilyEvent.new], local: true, html: { id: 'newEventForm' }) do |f| %>
          <!-- Titre -->
          <div class="mb-3">
            <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Titre</label>
            <%= f.text_field :title, class: "form-control form-control-custom", placeholder: "Ex: Garde Lucas", required: true %>
          </div>

          <!-- Type d'événement et Assigné à -->
          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Type d'événement</label>
              <%= f.select :event_type, options_for_select([
                ['Choisir un type', ''],
                ['Anniversaire', 'anniversaire'],
                ['Garde d\'enfant', 'garde'],
                ['Rendez-vous médical', 'medical'],
                ['Événement scolaire', 'scolaire'],
                ['Vacances', 'vacances'],
                ['Autre', 'autre']
              ]), {}, { class: "form-select form-select-custom", required: true } %>
            </div>
            <div class="col-md-6">
              <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Assigné à</label>
              <%= f.select :assigned_to, options_for_select(
                [['Qui s\'en occupe?', '']] + @family_members.map { |member| [member.name, member.name] } + [['Toute la famille', 'Toute la famille']]
              ), {}, { class: "form-select form-select-custom" } %>
            </div>
          </div>

          <!-- Date et Heure -->
          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Date</label>
              <%= f.date_field :start_date, class: "form-control form-control-custom", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Heure</label>
              <%= f.time_field :time, class: "form-control form-control-custom" %>
            </div>
          </div>

          <!-- Lieu -->
          <div class="mb-3">
            <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Lieu</label>
            <%= f.text_field :location, class: "form-control form-control-custom", placeholder: "Ex: École primaire" %>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label class="form-label fw-medium" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Description</label>
            <%= f.text_area :description, rows: 3, class: "form-control form-control-custom", placeholder: "Détails supplémentaires..." %>
          </div>

          <!-- Activer les rappels -->
          <div class="form-check mb-3">
            <div class="custom-checkbox-wrapper">
              <%= f.check_box :reminders_enabled, class: "custom-checkbox", checked: true %>
              <label for="family_event_reminders_enabled" class="custom-checkbox-label">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </label>
            </div>
            <label class="form-check-label fw-medium ms-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Activer les rappels</label>
          </div>

          <!-- Partager avec d'autres familles -->
          <div class="mb-4">
