<%= simple_form_for event do |f| %>
  <%= f.error_notification %>

  <!-- Titre de l'événement -->
  <div class="mb-3">
    <%= f.input :name,
                label: "Titre de l'événement",
                required: true,
                input_html: {
                  class: "form-control",
                  placeholder: "Ex: Apéro voisins"
                } %>
  </div>

  <!-- Date et Heure -->
  <div class="row g-3 mb-3">
    <%= f.input :date,
                label: "Date",
                required: true,
                input_html: {
                  class: "form-control",
                  placeholder: "jj/mm/aaaa"
                } %>
  </div>

  <!-- Lieu-->
  <div class="mb-3">
    <%= f.input :place,
                label: "Lieu",
                required: true,
                input_html: {
                  class: "form-control",
                  placeholder: "Ex : Parc du quartier"
                } %>
  </div>

  <!-- Catégorie-->
  <div class="mb-3">
    <%= f.input :category,
                as: :select,
                collection: [
                  ['Social', 'social'],
                  ['Sport', 'sport'],
                  ['Culture', 'culture'],
                  ['Famille', 'famille'],
                  ['Jardinage', 'jardinage'],
                  ['Autre', 'autre']
                ],
                label: "Catégorie",
                required: true,
                prompt: "Sélectionner une catégorie",
                input_html: {
                  class: "form-select"
                },
                label_html: {
                  class: "form-label fw-medium"
                } %>
  </div>

  <!-- Description -->
  <div class="mb-3">
    <%= f.input :description,
                as: :text,
                label: "Description",
                required: true,
                input_html: {
                  class: "form-control",
                  rows: 4,
                  placeholder: "Ex : Décrivez votre événement..."
                } %>
  </div>

  <!-- Nombre maximum de participants (optionnel) -->
  <div class="mb-3">
    <%= f.input :max_participations,
                label: "Nombre maximum de participants (optionnel)",
                required: false,
                input_html: {
                  class: "form-control",
                  placeholder: "Ex : 20"
                } %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <% if local_assigns[:in_modal] %>
      <%= f.button :button, "Annuler", class: "btn btn-outline-secondary", data: { bs_dismiss: "modal" } %>
      <%= f.button :submit, "Créer l'événement", class: "btn btn-dark" %>
    <% else %>
      <%= link_to "Annuler", events_path, class: "btn btn-outline-secondary" %>
      <%= f.button :submit, "Enregistrer les modifications", class: "btn btn-dark" %>
    <% end %>
  </div>
<% end %>
