<%# Navbar %>
<%= render 'shared/navbar' %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="mb-4">
        <%= link_to events_path, class: "text-decoration-none text-secondary" do %>
          <span class="me-2">←</span>Retour aux événements
        <% end %>
      </div>

      <div class="card rounded-4 border-0 shadow-sm">
        <div class="card-body p-4 p-lg-5">
          <div class="mb-4">
            <h2 class="fw-medium mb-2">Modifier l'événement</h2>
            <p class="text-secondary mb-0">Mettez à jour les informations de votre événement</p>
          </div>

          <%= render "form", event: @event %>
        </div>
      </div>
    </div>
  </div>
</div>
