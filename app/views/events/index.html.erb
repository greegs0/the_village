// Gestion des inscriptions aux √©v√©nements
function isUserSignedIn() {
  // V√©rifie si l'√©l√©ment data-user-signed-in existe dans le DOM
  const marker = document.querySelector('[data-user-signed-in]');
  return marker !== null;
}

async function handleEventRegistration(button) {
  // V√©rifier si l'utilisateur est connect√©
  if (!isUserSignedIn()) {
    window.VillageAlert.warning("Vous devez vous connecter pour vous inscrire √† un √©v√©nement.", { autoHide: true, duration: 4000 });
    return;
  }

  const eventId = button.dataset.eventId;
  const isRegistered = button.dataset.registered === 'true';
  const participants = button.dataset.participants || '';
  const participantsCount = parseInt(button.dataset.participantsCount) || 0;
  const csrfToken = document.querySelector('meta[name="csrf-token"]').content;

  if (isRegistered) {
    // Demander confirmation pour se d√©sinscrire
    const confirmed = await window.VillageAlert.confirm(
      "Voulez-vous vraiment vous d√©sinscrire de cet √©v√©nement ?",
      {
        danger: true,
        confirmText: "Se d√©sinscrire",
        cancelText: "Annuler"
      }
    );

    if (confirmed) {
      try {
        const response = await fetch(`/events/${eventId}/unregister`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': csrfToken,
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          }
        });

        // V√©rifier si la r√©ponse est OK avant de parser le JSON
        if (!response.ok) {
          const data = await response.json().catch(() => ({}));
          window.VillageAlert.error(data.message || "Une erreur est survenue");
          return;
        }

        const data = await response.json();

        if (data.success) {
          window.VillageAlert.success(data.message);
          // Mettre √† jour le bouton
          button.textContent = "S'inscrire";
          button.dataset.registered = 'false';
          button.classList.remove('btn-registered');
          button.classList.add('btn-register');
          // Mettre √† jour le compteur
          updateParticipantsCount(eventId, data.participants_count);
          // Mettre √† jour les data-attributes pour les futures interactions
          button.dataset.participantsCount = data.participants_count;
          button.dataset.participants = data.participants_names || '';
        } else {
          window.VillageAlert.error(data.message);
        }
      } catch (error) {
        window.VillageAlert.error("Une erreur est survenue");
      }
    }
  } else {
    // Construire le message avec la liste des participants
    let message = "Voulez-vous vous inscrire √† cet √©v√©nement ?";
    if (participantsCount > 0 && participants) {
      message += `\n\nParticipants actuels (${participantsCount}) :\n${participants}`;
    } else {
      message += "\n\nSoyez le premier √† vous inscrire !";
    }

    const confirmed = await window.VillageAlert.confirm(
      message,
      {
        confirmText: "S'inscrire",
        cancelText: "Annuler"
      }
    );

    if (confirmed) {
      try {
        const response = await fetch(`/events/${eventId}/register`, {
          method: 'POST',
          headers: {
            'X-CSRF-Token': csrfToken,
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          }
        });

        // V√©rifier si la r√©ponse est OK avant de parser le JSON
        if (!response.ok) {
          const data = await response.json().catch(() => ({}));
          window.VillageAlert.error(data.message || "Une erreur est survenue");
          return;
        }

        const data = await response.json();

        if (data.success) {
          window.VillageAlert.success(data.message);
          // Mettre √† jour le bouton
          button.textContent = "Inscrit";
          button.dataset.registered = 'true';
          button.classList.remove('btn-register');
          button.classList.add('btn-registered');
          // Mettre √† jour le compteur
          updateParticipantsCount(eventId, data.participants_count);
          // Mettre √† jour les data-attributes pour les futures interactions
          button.dataset.participantsCount = data.participants_count;
          button.dataset.participants = data.participants_names || '';
        } else {
          window.VillageAlert.error(data.message);
        }
      } catch (error) {
        window.VillageAlert.error("Une erreur est survenue");
      }
    }
  }
}

function updateParticipantsCount(eventId, count) {
  const countSpan = document.querySelector(`#participants-count-${eventId} .count-value`);
  if (countSpan) {
    countSpan.textContent = count;
  }
}
</script>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<script>
  // Variables globales pour la carte (n√©cessaire pour Turbo)
  window.VillageMap = window.VillageMap || {};
  window.VillageMap.map = null;
  window.VillageMap.markersById = {};

  // Donn√©es des √©v√©nements
  window.VillageMap.events = [
    <% @events.with_coordinates.each do |event| %>
    {
      id: <%= event.id %>,
      lat: <%= event.latitude %>,
      lng: <%= event.longitude %>,
      name: "<%= j(event.name) %>",
      date: "<%= event.date&.strftime('%d/%m/%Y') %>",
      place: "<%= j(event.place || '') %>",
      address: "<%= j(event.address || '') %>",
      category: "<%= j(event.category || '') %>"
    },
    <% end %>
  ];

  window.VillageMap.initMap = function() {
    const mapContainer = document.getElementById('map');
    if (!mapContainer) return;

    // D√©truire l'ancienne carte si elle existe
    if (window.VillageMap.map) {
      window.VillageMap.map.remove();
      window.VillageMap.map = null;
      window.VillageMap.markersById = {};
    }

    // Centre par d√©faut sur Paris
    let defaultCenter = [48.8566, 2.3522];
    let defaultZoom = 12;

    // Si des √©v√©nements existent, centrer sur le premier
    if (window.VillageMap.events.length > 0) {
      defaultCenter = [window.VillageMap.events[0].lat, window.VillageMap.events[0].lng];
    }

    window.VillageMap.map = L.map('map').setView(defaultCenter, defaultZoom);

    // Add OpenStreetMap tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
      maxZoom: 19
    }).addTo(window.VillageMap.map);

    // Ic√¥ne personnalis√©e avec le gradient violet
    const customIcon = L.divIcon({
      className: 'custom-marker',
      html: '<div class="marker-pin"></div>',
      iconSize: [30, 42],
      iconAnchor: [15, 42],
      popupAnchor: [0, -42]
    });

    // Ajouter les marqueurs pour chaque √©v√©nement
    const markers = [];
    window.VillageMap.events.forEach(function(event) {
      const popupContent = `
        <div class="event-popup">
          <strong>${event.name}</strong>
          ${event.date ? '<br><small>üìÖ ' + event.date + '</small>' : ''}
          ${event.address ? '<br><small>üìç ' + event.address + '</small>' : ''}
          ${event.category ? '<br><span class="badge bg-primary mt-1">' + event.category + '</span>' : ''}
        </div>
      `;
      const marker = L.marker([event.lat, event.lng], { icon: customIcon })
        .addTo(window.VillageMap.map)
        .bindPopup(popupContent);
      markers.push(marker);
      window.VillageMap.markersById[event.id] = marker;
    });

    // Ajuster la vue pour afficher tous les marqueurs
    if (markers.length > 1) {
      const group = L.featureGroup(markers);
      window.VillageMap.map.fitBounds(group.getBounds().pad(0.1));
    } else if (markers.length === 0) {
      // Aucun √©v√©nement avec coordonn√©es, afficher message
      L.popup()
        .setLatLng(defaultCenter)
        .setContent('<em>Aucun √©v√©nement localis√© pour le moment</em>')
        .openOn(window.VillageMap.map);
    }
  };

  // Fonction pour afficher un √©v√©nement sur la carte
  window.VillageMap.showEventOnMap = function(eventId, lat, lng) {
    const mapTab = document.querySelector('button[data-bs-target="#mapView"]');
    const mapPane = document.getElementById('mapView');

    // Activer l'onglet carte et initialiser si n√©cessaire
    if (mapTab && mapPane && !mapPane.classList.contains('active')) {
      const tab = new bootstrap.Tab(mapTab);
      tab.show();
    }

    // Attendre que la carte soit initialis√©e
    setTimeout(function() {
      // Initialiser la carte si elle ne l'est pas encore
      if (!window.VillageMap.map) {
        window.VillageMap.initMap();
      }

      setTimeout(function() {
        if (window.VillageMap.map && window.VillageMap.markersById[eventId]) {
          // Centrer sur le marqueur et zoomer
          window.VillageMap.map.setView([lat, lng], 16);
          // Ouvrir le popup
          window.VillageMap.markersById[eventId].openPopup();
          // Animation du marqueur
          const markerElement = window.VillageMap.markersById[eventId].getElement();
          if (markerElement) {
            markerElement.classList.add('marker-highlight');
            setTimeout(() => markerElement.classList.remove('marker-highlight'), 2000);
          }
        }
      }, 100);
    }, 200);
  };

  // Setup de la carte quand l'onglet est affich√©
  function setupMapTab() {
    const mapTab = document.querySelector('button[data-bs-target="#mapView"]');
    if (mapTab && !mapTab._villageMapSetup) {
      mapTab._villageMapSetup = true;
      mapTab.addEventListener('shown.bs.tab', function() {
        setTimeout(window.VillageMap.initMap, 50);
      });
    }

    // Si l'onglet carte est d√©j√† actif
    const mapPane = document.getElementById('mapView');
    if (mapPane && mapPane.classList.contains('active')) {
      setTimeout(window.VillageMap.initMap, 50);
    }
  }

  // Ex√©cuter au chargement
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupMapTab);
  } else {
    setupMapTab();
  }

  // Support Turbo Drive
  document.addEventListener('turbo:load', setupMapTab);
  document.addEventListener('turbo:render', setupMapTab);
</script>

