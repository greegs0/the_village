<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize map when the map tab is shown
    const mapTab = document.querySelector('button[data-bs-target="#mapView"]');
    let map = null;

    if (mapTab) {
      mapTab.addEventListener('shown.bs.tab', function() {
        if (!map) {
          // Initialize the map centered on department 65 (Hautes-Pyr√©n√©es)
          map = L.map('map').setView([43.0, 0.0], 9);

          // Add OpenStreetMap tiles
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
            maxZoom: 19
          }).addTo(map);

          // Add a marker for the department center
          L.marker([43.0, 0.0]).addTo(map)
            .bindPopup('D√©partement 65 - Hautes-Pyr√©n√©es')
            .openPopup();
        } else {
          // Invalidate size to ensure proper rendering when switching tabs
          setTimeout(function() {
            map.invalidateSize();
          }, 100);
        }
      });
    }
  });
</script>
