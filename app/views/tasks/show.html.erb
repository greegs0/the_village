<!-- Main Content -->
<div class="container-fluid px-4 px-lg-5 py-4">
  <!-- Header with Back Button -->
  <div class="d-flex align-items-center mb-4">
    <%= link_to family_tasks_path(@family), class: "btn btn-back me-3" do %>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5"/>
        <path d="M12 19l-7-7 7-7"/>
      </svg>
      <span class="ms-2">Retour</span>
    <% end %>
    <div class="flex-grow-1">
      <h1 class="h2 mb-1 dashboard-title"><%= @task.name %></h1>
      <p class="text-secondary mb-0">D√©tails de la t√¢che</p>
    </div>
  </div>

  <div class="row g-4">
    <!-- Task Details Card -->
    <div class="col-lg-8">
      <div class="card stat-card rounded-4">
        <div class="card-body p-4">
          <!-- Status Section with Checkbox -->
          <div class="mb-4 pb-4 border-bottom">
            <h5 class="mb-3 dashboard-section-title">Statut</h5>
            <%= form_with(url: toggle_status_family_task_path(@family, @task), method: :patch, local: true, class: "d-flex align-items-center gap-3", id: "task-status-form") do %>
