    opacity: 1;
  }

  .task-checkbox:hover + .task-checkbox-label {
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
  }
</style>

<script>
  function initTaskStatusCheckbox() {
    const checkbox = document.getElementById('task-status-checkbox');
    const form = document.getElementById('task-status-form');

    if (!checkbox || !form) return;

    // Clone to remove existing listeners
    const newCheckbox = checkbox.cloneNode(true);
    checkbox.parentNode.replaceChild(newCheckbox, checkbox);

    const wasChecked = newCheckbox.checked;

    newCheckbox.addEventListener('change', function(e) {
      // Si la t√¢che passe de non coch√©e √† coch√©e
      if (!wasChecked && this.checked) {
        e.preventDefault();

        // Soumettre le formulaire via fetch pour √©viter le rechargement
        fetch(form.action, {
          method: 'PATCH',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
            'Accept': 'text/html'
          }
        }).then(() => {
          // Afficher la notification Village Alert apr√®s la soumission
          if (window.VillageAlert) {
            window.VillageAlert.success("Bien jou√© ! Bravo pour ta contribution au Village. üéâ");
          }
          // Reload page after alert closes (5s duration + 0.5s margin)
          setTimeout(() => {
            window.location.reload();
          }, 5500);
        });
      } else {
        // Si on d√©coche, soumettre directement sans modale
        form.submit();
      }
    });
  }

  // Support both regular page load and Turbo navigation
  document.addEventListener('DOMContentLoaded', initTaskStatusCheckbox);
  document.addEventListener('turbo:load', initTaskStatusCheckbox);
</script>


