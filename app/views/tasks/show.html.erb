                      <circle cx="12" cy="12" r="10" stroke="url(#iconGradient)"/>
                      <polyline points="12 6 12 12 16 14" stroke="url(#iconGradient)"/>
                    </svg>
                  </div>
                  <div>
                    <small class="text-muted d-block">Date d'√©ch√©ance</small>
                    <span class="fw-medium"><%= @task.target_date.strftime("%d/%m/%Y") %></span>
                  </div>
                </div>
              </div>

              <% if @task.assignee.present? %>
                <div class="col-md-6">
                  <div class="d-flex align-items-start">
                    <div class="icon-wrapper me-3">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
