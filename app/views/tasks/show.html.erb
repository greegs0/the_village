    <%= link_to family_tasks_path(@family), class: "btn btn-outline-secondary me-3" do %>
      ‚Üê Retour
    <% end %>
    <div class="flex-grow-1">
      <h1 class="h2 mb-1"><%= @task.name %></h1>
