                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </label>
              </div>
              <label class="form-check-label fw-medium" for="task-status-checkbox" style="<%= @task.status ? 'background: linear-gradient(135deg, #10b981 0%, #059669 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;' : 'color: #6B7280;' %>">
                <%= @task.status ? 'T√¢che termin√©e' : 'Coche quand c\'est fait !' %>
              </label>
            <% end %>
          </div>

          <!-- Task Information -->
          <div class="mb-4 pb-4 border-bottom">
            <h5 class="mb-3 dashboard-section-title">Informations</h5>

            <div class="row g-3">
              <div class="col-md-6">
                <div class="d-flex align-items-start">
