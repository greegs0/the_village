<script>
  function toggleTasks(type) {
    const hiddenTasks = document.querySelectorAll(`[data-task-type="${type}"].hidden-task`);
    const showMoreBtn = document.getElementById(`show-more-${type}`);
    const showLessBtn = document.getElementById(`show-less-${type}`);

    if (showMoreBtn.style.display !== 'none') {
      // Afficher toutes les t√¢ches
      hiddenTasks.forEach(task => {
        task.classList.remove('hidden-task');
      });
      showMoreBtn.style.display = 'none';
      showLessBtn.style.display = 'inline-block';
    } else {
      // Masquer les t√¢ches apr√®s les 5 premi√®res
      const allTasks = document.querySelectorAll(`[data-task-type="${type}"]`);
      allTasks.forEach((task, index) => {
        if (index >= 5) {
          task.classList.add('hidden-task');
        }
      });
      showMoreBtn.style.display = 'inline-block';
      showLessBtn.style.display = 'none';
    }
  }

  // Handle task completion with Village Alert
  function initTaskCheckboxes() {
    const checkboxes = document.querySelectorAll('.task-complete-checkbox');

    checkboxes.forEach(function(checkbox) {
      // Remove any existing listeners by cloning
      const newCheckbox = checkbox.cloneNode(true);
      checkbox.parentNode.replaceChild(newCheckbox, checkbox);

      const wasChecked = newCheckbox.dataset.wasChecked === 'true';

      newCheckbox.addEventListener('change', function(e) {
        const form = this.closest('.task-toggle-form');

        // Only show alert when completing a task (unchecked -> checked)
        if (!wasChecked && this.checked) {
          e.preventDefault();

          // Submit via fetch with Turbo Stream to update stats without page reload
          fetch(form.action, {
            method: 'PATCH',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
              'Accept': 'text/vnd.turbo-stream.html'
            }
          }).then(response => response.text())
          .then(html => {
            // Process Turbo Stream response to update all panels
            Turbo.renderStreamMessage(html);

            // Show Village Alert success message
            if (window.VillageAlert) {
              window.VillageAlert.success("Bien jou√© ! Bravo pour ta contribution au Village. üéâ");
            }

            // Reload page after alert to refresh task lists
            setTimeout(() => {
              window.location.reload();
            }, 5500);
          });
        } else {
          // For unchecking, submit with Turbo Stream as well
          e.preventDefault();
          fetch(form.action, {
            method: 'PATCH',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
              'Accept': 'text/vnd.turbo-stream.html'
            }
          }).then(response => response.text())
          .then(html => {
            Turbo.renderStreamMessage(html);
            // Reload to refresh task lists
            setTimeout(() => {
              window.location.reload();
            }, 500);
          });
        }
      });
    });
  }

  // Support both regular page load and Turbo navigation
  document.addEventListener('DOMContentLoaded', initTaskCheckboxes);
  document.addEventListener('turbo:load', initTaskCheckboxes);
</script>
