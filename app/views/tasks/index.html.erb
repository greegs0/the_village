        <div class="card border rounded-4">
          <div class="card-body p-3 p-md-4">
            <h5 class="mb-4">Toutes les t√¢ches</h5>

            <!-- Tabs -->
            <ul class="nav nav-pills bg-light rounded-3 p-1 mb-4" role="tablist">
              <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link active w-100" data-bs-toggle="pill" data-bs-target="#ongoing" type="button">
                  En cours (<%= @tasks.count %>)
                </button>
              </li>
              <li class="nav-item flex-fill" role="presentation">
                <button class="nav-link w-100" data-bs-toggle="pill" data-bs-target="#completed" type="button">
                  Termin√©es (0)
                </button>
              </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
              <div class="tab-pane fade show active" id="ongoing">
                <!-- Task Items -->
                <% if @tasks.any? %>
                  <% @tasks.each do |task| %>
                    <div class="border rounded-3 p-3 mb-3 d-flex align-items-center gap-3">
                      <input type="checkbox" class="form-check-input m-0">
                      <div class="flex-grow-1">
                        <h6 class="mb-1"><%= link_to task.name, task_path(task), class: "text-decoration-none text-dark" %></h6>
                        <div class="d-flex flex-wrap gap-2 align-items-center">
                          <small class="text-muted">üïê <%= task.target_date.strftime("%d/%m/%Y") %></small>
                        </div>
                      </div>
                      <% if task.assignee.present? %>
                        <div class="d-flex align-items-center gap-2">
                          <div class="rounded-circle bg-light d-flex align-items-center justify-content-center"
                               style="width: 32px; height: 32px;">
                            <span class="small fw-medium"><%= task.assignee.name.first.upcase %></span>
                          </div>
                          <small class="text-muted d-none d-md-block"><%= task.assignee.name %></small>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-center text-muted py-4">Aucune t√¢che pour le moment</p>
                <% end %>
              </div>

              <div class="tab-pane fade" id="completed">
                <p class="text-center text-muted py-4">Aucune t√¢che termin√©e pour le moment</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <!-- Distribution by Person -->
        <div class="card border rounded-4 mb-4">
          <div class="card-body p-3 p-md-4">
            <h6 class="mb-1">R√©partition par personne</h6>
            <p class="text-secondary small mb-4">Nombre de t√¢ches assign√©es</p>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                       style="width: 32px; height: 32px;">
                    <span class="small fw-medium">A</span>
                  </div>
                  <span class="small">Al</span>
                </div>
                <span class="small text-muted">1/2</span>
              </div>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-primary" style="width: 50%"></div>
              </div>
            </div>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                       style="width: 32px; height: 32px;">
                    <span class="small fw-medium">R</span>
                  </div>
                  <span class="small">Reese</span>
                </div>
                <span class="small text-muted">0/2</span>
              </div>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-primary" style="width: 0%"></div>
              </div>
            </div>

            <div>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                       style="width: 32px; height: 32px;">
                    <span class="small fw-medium">L</span>
                  </div>
                  <span class="small">Lois</span>
                </div>
                <span class="small text-muted">0/2</span>
              </div>
              <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-primary" style="width: 0%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Categories -->
        <div class="card border rounded-4">
          <div class="card-body p-3 p-md-4">
            <h6 class="mb-4">Cat√©gories</h6>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="small">Travaux</span>
              <span class="badge bg-light text-dark">2</span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="small">Cuisine</span>
              <span class="badge bg-light text-dark">1</span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="small">Enfants</span>
              <span class="badge bg-light text-dark">0</span>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="small">Projets</span>
              <span class="badge bg-light text-dark">1</span>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <span class="small">Vacances</span>
              <span class="badge bg-light text-dark">1</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="row g-4 mt-2">
      <div class="col-lg-6">
        <div class="card border rounded-4">
          <div class="card-body p-3 p-md-4">
            <h6 class="mb-1">R√©partition globale des t√¢ches</h6>
            <p class="text-secondary small mb-4">Distribution du nombre total de t√¢ches par personne</p>

            <div class="text-center">
              <svg width="200" height="200" viewBox="0 0 200 200" class="mb-3">
                <circle cx="100" cy="100" r="80" fill="none" stroke="#3b82f6" stroke-width="40"
                        stroke-dasharray="167 335" transform="rotate(0 100 100)"/>
                <circle cx="100" cy="100" r="80" fill="none" stroke="#8b5cf6" stroke-width="40"
                        stroke-dasharray="167 335" transform="rotate(120 100 100)"/>
                <circle cx="100" cy="100" r="80" fill="none" stroke="#ec4899" stroke-width="40"
                        stroke-dasharray="167 335" transform="rotate(240 100 100)"/>
              </svg>

              <div class="d-flex justify-content-center gap-3 flex-wrap">
                <div class="d-flex align-items-center">
                  <div class="rounded" style="width: 12px; height: 12px; background-color: #8b5cf6;"></div>
                  <span class="ms-2 small">Julie</span>
                </div>
                <div class="d-flex align-items-center">
                  <div class="rounded" style="width: 12px; height: 12px; background-color: #3b82f6;"></div>
                  <span class="ms-2 small">Marc</span>
                </div>
                <div class="d-flex align-items-center">
                  <div class="rounded" style="width: 12px; height: 12px; background-color: #ec4899;"></div>
                  <span class="ms-2 small">Sophie</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card border rounded-4">
          <div class="card-body p-3 p-md-4">
            <h6 class="mb-1">La contribution individuelle</h6>
            <p class="text-secondary small mb-4">T√¢ches termin√©es vs en cours par personne</p>

            <div class="mb-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                       style="width: 32px; height: 32px;">
                    <span class="small fw-medium">M</span>
                  </div>
                  <span class="small">Marc</span>
                </div>
                <small class="text-muted">1/2 termin√©es</small>
              </div>
              <div class="progress" style="height: 24px;">
                <div class="progress-bar bg-success" style="width: 50%">50%</div>
              </div>
            </div>

            <div class="mb-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                       style="width: 32px; height: 32px;">
                    <span class="small fw-medium">J</span>
                  </div>
                  <span class="small">Julie</span>
                </div>
                <small class="text-muted">0/2 termin√©es</small>
              </div>
              <div class="progress" style="height: 24px;">
                <div class="progress-bar bg-warning" style="width: 0%">0%</div>
              </div>
            </div>

            <div>
              <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                       style="width: 32px; height: 32px;">
                    <span class="small fw-medium">S</span>
                  </div>
                  <span class="small">Sophie</span>
                </div>
                <small class="text-muted">0/2 termin√©es</small>
              </div>
              <div class="progress" style="height: 24px;">
                <div class="progress-bar bg-warning" style="width: 0%">0%</div>
              </div>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-3 pt-3 border-top">
              <div class="d-flex align-items-center">
                <div class="rounded" style="width: 12px; height: 12px; background-color: #10b981;"></div>
                <span class="ms-2 small">Termin√©es</span>
              </div>
              <div class="d-flex align-items-center">
                <div class="rounded" style="width: 12px; height: 12px; background-color: #f59e0b;"></div>
                <span class="ms-2 small">En cours</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Nouvelle T√¢che -->
  <div class="modal fade" id="newTaskModal" tabindex="-1" aria-labelledby="newTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4">
        <div class="modal-header border-0 pb-0">
          <div>
            <h5 class="modal-title fw-medium" id="newTaskModalLabel">Cr√©er une nouvelle t√¢che</h5>
            <p class="text-secondary small mb-0">Ajoute une nouvelle t√¢che et assigne-la √† un membre de la famille</p>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body pt-3">
          <%= form_with(model: Task.new, url: tasks_path, method: :post, local: true) do |f| %>
            <!-- Titre de la t√¢che -->
            <div class="mb-3">
              <%= f.label :name, "Titre de la t√¢che", class: "form-label fw-medium" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Ex: Planifier les vacs", required: true %>
            </div>

            <!-- Assign√© √† -->
            <div class="mb-3">
              <%= f.label :assignee_id, "Assign√© √†", class: "form-label fw-medium" %>
              <%= f.collection_select :assignee_id, User.all, :id, :name, { prompt: "Choisir une personne" }, { class: "form-select" } %>
            </div>

            <!-- Cr√©√© par (user_id) - cach√©, on utilisera current_user si disponible -->
            <%= f.hidden_field :user_id, value: User.first&.id %>

            <!-- Date d'√©ch√©ance -->
            <div class="mb-4">
              <%= f.label :target_date, "Date d'√©ch√©ance", class: "form-label fw-medium" %>
              <%= f.date_field :target_date, class: "form-control", required: true %>
            </div>

            <!-- Submit Button -->
            <%= f.submit "C'est parti !", class: "btn btn-dark w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
