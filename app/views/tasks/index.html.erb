<%= render 'shared/navbar' %>

<!-- SVG Definitions for gradient icons -->
<svg width="0" height="0" style="position: absolute;">
  <defs>
    <linearGradient id="iconGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea"/>
      <stop offset="100%" style="stop-color:#764ba2"/>
    </linearGradient>
    <linearGradient id="progressGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea"/>
      <stop offset="100%" style="stop-color:#764ba2"/>
    </linearGradient>
  </defs>
</svg>

<!-- Main Content -->
<div class="container-fluid px-4 px-lg-5 py-4">
  <!-- Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
    <div>
      <h1 class="h2 mb-2 dashboard-title">Gestion des tâches</h1>
      <p class="text-secondary mb-0">Organise et suis l'avancement des tâches de ta famille</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newTaskModal">
      <span class="me-2">+</span>Créer une tâche
    </button>
  </div>

  <div class="row g-4">
    <!-- Task List -->
    <div class="col-lg-8">
      <div class="card stat-card rounded-4">
        <div class="card-body p-3 p-md-4">
          <h5 class="mb-4 dashboard-section-title">Toutes les tâches</h5>

          <!-- Tabs -->
          <ul class="nav nav-pills p-1 mb-4 rounded-3" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);" role="tablist">
            <li class="nav-item flex-fill" role="presentation">
              <button class="nav-link active w-100 task-tab" data-bs-toggle="pill" data-bs-target="#ongoing" type="button">
                En cours (<%= @tasks.where(status: [false, nil]).count %>)
              </button>
            </li>
            <li class="nav-item flex-fill" role="presentation">
              <button class="nav-link w-100 task-tab" data-bs-toggle="pill" data-bs-target="#completed" type="button">
                Terminées (<%= @tasks.where(status: true).count %>)
              </button>
            </li>
          </ul>

          <!-- Tab Content -->
          <div class="tab-content">
            <div class="tab-pane fade show active" id="ongoing">
              <!-- Task Items -->
              <% ongoing_tasks = @tasks.where(status: [false, nil]) %>
              <% if ongoing_tasks.any? %>
                <div id="ongoing-tasks-container">
                  <% ongoing_tasks.each_with_index do |task, index| %>
                    <div class="rounded-3 p-3 mb-3 d-flex align-items-center gap-3 task-item <%= 'hidden-task' if index >= 5 %>" data-task-type="ongoing" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.04) 0%, rgba(118, 75, 162, 0.04) 100%); border: 1px solid rgba(102, 126, 234, 0.12);">
                      <%= form_with(url: toggle_status_family_task_path(@family, task), method: :patch, local: true, class: "m-0") do %>
                        <div class="task-checkbox">
                          <%= check_box_tag 'status', '1', task.status, class: "form-check-input m-0", onchange: "this.form.submit()" %>
                        </div>
                      <% end %>
                      <div class="flex-grow-1">
                        <h6 class="mb-1"><%= link_to task.name, family_task_path(@family, task), class: "text-decoration-none", style: "color: #374151;" %></h6>
                        <div class="d-flex flex-wrap gap-2 align-items-center">
                          <small class="text-muted d-flex align-items-center gap-1">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
                              <circle cx="12" cy="12" r="10" stroke="url(#iconGradient)" stroke-width="1.5"></circle>
                              <polyline points="12 6 12 12 16 14" stroke="url(#iconGradient)" stroke-width="1.5" stroke-linecap="round"></polyline>
                            </svg>
                            <%= task.target_date.strftime("%d/%m/%Y") %>
                          </small>
                        </div>
                      </div>
                      <% if task.assignee.present? %>
                        <div class="d-flex align-items-center gap-2">
                          <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 32px; height: 32px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <span class="small fw-medium text-white"><%= task.assignee.name.first.upcase %></span>
                          </div>
                          <small class="text-muted d-none d-md-block"><%= task.assignee.name %></small>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <% if ongoing_tasks.count > 5 %>
                  <div class="text-center">
                    <button id="show-more-ongoing" class="btn btn-sm" onclick="toggleTasks('ongoing')" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%); border: 1px solid rgba(102, 126, 234, 0.2); color: #667eea;">
                      Voir plus (<%= ongoing_tasks.count - 5 %>)
                    </button>
                    <button id="show-less-ongoing" class="btn btn-sm" style="display: none; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%); border: 1px solid rgba(102, 126, 234, 0.2); color: #667eea;" onclick="toggleTasks('ongoing')">
                      Voir moins
                    </button>
                  </div>
                <% end %>
              <% else %>
                <div class="text-center py-5">
                  <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 64px; height: 64px; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                      <path d="M9 11l3 3L22 4" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                      <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                  </div>
                  <p class="text-muted mb-0">Aucune tâche en cours pour le moment</p>
                </div>
              <% end %>
            </div>

            <div class="tab-pane fade" id="completed">
              <% completed_tasks = @tasks.where(status: true) %>
              <% if completed_tasks.any? %>
                <div id="completed-tasks-container">
                  <% completed_tasks.each_with_index do |task, index| %>
                    <div class="rounded-3 p-3 mb-3 d-flex align-items-center gap-3 task-item <%= 'hidden-task' if index >= 5 %>" data-task-type="completed" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.04) 0%, rgba(118, 75, 162, 0.04) 100%); border: 1px solid rgba(102, 126, 234, 0.12); opacity: 0.7;">
                      <%= form_with(url: toggle_status_family_task_path(@family, task), method: :patch, local: true, class: "m-0") do %>
                        <div class="task-checkbox">
                          <%= check_box_tag 'status', '1', task.status, class: "form-check-input m-0", onchange: "this.form.submit()" %>
                        </div>
                      <% end %>
                      <div class="flex-grow-1">
                        <h6 class="mb-1"><%= link_to task.name, family_task_path(@family, task), class: "text-decoration-none text-decoration-line-through text-muted" %></h6>
                        <div class="d-flex flex-wrap gap-2 align-items-center">
                          <small class="text-muted d-flex align-items-center gap-1">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
                              <circle cx="12" cy="12" r="10" stroke="url(#iconGradient)" stroke-width="1.5"></circle>
                              <polyline points="12 6 12 12 16 14" stroke="url(#iconGradient)" stroke-width="1.5" stroke-linecap="round"></polyline>
                            </svg>
                            <%= task.target_date.strftime("%d/%m/%Y") %>
                          </small>
                        </div>
                      </div>
                      <% if task.assignee.present? %>
                        <div class="d-flex align-items-center gap-2">
                          <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 32px; height: 32px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <span class="small fw-medium text-white"><%= task.assignee.name.first.upcase %></span>
                          </div>
                          <small class="text-muted d-none d-md-block"><%= task.assignee.name %></small>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <% if completed_tasks.count > 5 %>
                  <div class="text-center">
                    <button id="show-more-completed" class="btn btn-sm" onclick="toggleTasks('completed')" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%); border: 1px solid rgba(102, 126, 234, 0.2); color: #667eea;">
                      Voir plus (<%= completed_tasks.count - 5 %>)
                    </button>
                    <button id="show-less-completed" class="btn btn-sm" style="display: none; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%); border: 1px solid rgba(102, 126, 234, 0.2); color: #667eea;" onclick="toggleTasks('completed')">
                      Voir moins
                    </button>
                  </div>
                <% end %>
              <% else %>
                <div class="text-center py-5">
                  <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 64px; height: 64px; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                      <path d="M9 11l3 3L22 4" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                      <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" stroke="url(#iconGradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                  </div>
                  <p class="text-muted mb-0">Aucune tâche terminée pour le moment</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Distribution by Person -->
      <div class="card stat-card rounded-4 mb-4">
        <div class="card-body p-3 p-md-4">
          <h6 class="mb-1 dashboard-section-title">Répartition par personne</h6>
          <p class="text-secondary small mb-4">Tâches en cours assignées</p>

          <% if @tasks_by_person.any? %>
            <% @tasks_by_person.each_with_index do |data, index| %>
              <div class="<%= index < @tasks_by_person.length - 1 ? 'mb-3' : '' %>">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <div class="d-flex align-items-center">
                    <div class="rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                      <span class="small fw-medium text-white"><%= data[:person].name.first.upcase %></span>
                    </div>
                    <span class="small"><%= data[:person].name %></span>
                  </div>
                  <span class="small" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 600;"><%= data[:completed_tasks] %>/<%= data[:total_tasks] %></span>
                </div>
                <div class="progress" style="height: 8px; background: rgba(102, 126, 234, 0.1); border-radius: 4px;">
                  <div class="progress-bar" style="width: <%= data[:total_tasks] > 0 ? (data[:completed_tasks].to_f / data[:total_tasks] * 100).round : 0 %>%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 4px;"></div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="url(#iconGradient)" stroke-width="1.5" stroke-linecap="round"></path>
                  <circle cx="9" cy="7" r="4" stroke="url(#iconGradient)" stroke-width="1.5"></circle>
                </svg>
              </div>
              <p class="text-muted small mb-0">Aucune personne pour le moment</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="row g-4 mt-2">
    <!-- Pie Chart -->
    <div class="col-lg-6">
      <div class="card stat-card rounded-4">
        <div class="card-body p-3 p-md-4">
          <h6 class="mb-1 dashboard-section-title">Répartition globale de toutes les tâches</h6>
          <p class="text-secondary small mb-4">Qui en fait le plus depuis le début de l'année ?</p>

          <% if @tasks_by_person.any? && @tasks.count > 0 %>
            <%
              # Couleurs pastel distinctes pour chaque segment
              pie_colors = ['#7684ffff', '#F0ABFC', '#FDA4AF', '#ffe181ff', '#75e79fff', '#7DD3FC']
              total_tasks = @tasks_by_person.sum { |d| d[:total_tasks] }
              accumulated_percent = 0
              circumference = 502
            %>
            <div class="row align-items-center">
              <div class="col-md-6">
                <div class="text-center mb-3">
                  <div class="position-relative d-inline-block">
                    <svg width="180" height="180" viewBox="0 0 200 200">
                      <!-- Fond -->
                      <circle cx="100" cy="100" r="80" fill="none" stroke="rgba(102, 126, 234, 0.08)" stroke-width="24"/>
                      <!-- Segments -->
                      <% @tasks_by_person.each_with_index do |data, index| %>
                        <% if data[:total_tasks] > 0 %>
                          <%
                            percent = (data[:total_tasks].to_f / total_tasks * 100).round
                            segment_length = (circumference * percent / 100).round
                            offset = circumference - (circumference * accumulated_percent / 100).round
                            accumulated_percent += percent
                            color = pie_colors[index % pie_colors.length]
                          %>
                          <circle cx="100" cy="100" r="80" fill="none"
                                  stroke="<%= color %>"
                                  stroke-width="24"
                                  stroke-dasharray="<%= segment_length %> <%= circumference - segment_length %>"
                                  stroke-dashoffset="<%= offset %>"
                                  transform="rotate(-90 100 100)"/>
                        <% end %>
                      <% end %>
                    </svg>
                    <div class="position-absolute top-50 start-50 translate-middle text-center">
                      <div class="h3 mb-0 stat-number"><%= total_tasks %></div>
                      <small class="text-muted">Total</small>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <% @tasks_by_person.each_with_index do |data, index| %>
                  <% if data[:total_tasks] > 0 %>
                    <div class="d-flex align-items-center mb-2">
                      <div class="rounded-circle" style="width: 12px; height: 12px; background: <%= pie_colors[index % pie_colors.length] %>;"></div>
                      <span class="ms-2 small"><%= data[:person].name %> (<%= data[:total_tasks] %>)</span>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 64px; height: 64px; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10" stroke="url(#iconGradient)" stroke-width="1.5"></circle>
                  <path d="M12 6v6l4 2" stroke="url(#iconGradient)" stroke-width="1.5" stroke-linecap="round"></path>
                </svg>
              </div>
              <p class="text-muted mb-0">Aucune tâche assignée pour le moment</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Individual Contribution -->
    <div class="col-lg-6">
      <div class="card stat-card rounded-4">
        <div class="card-body p-3 p-md-4">
          <h6 class="mb-1 dashboard-section-title">Contribution individuelle</h6>
          <p class="text-secondary small mb-4">La to-do en volume par personne</p>

          <% if @tasks_by_person.any? %>
            <% @tasks_by_person.each_with_index do |data, index| %>
              <% if data[:total_tasks] > 0 %>
                <div class="<%= index < @tasks_by_person.length - 1 ? 'mb-4' : '' %>">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <div class="d-flex align-items-center">
                      <div class="rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <span class="small fw-medium text-white"><%= data[:person].name.first.upcase %></span>
                      </div>
                      <span class="small"><%= data[:person].name %></span>
                    </div>
                    <small style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 500;"><%= data[:completed_tasks] %>/<%= data[:total_tasks] %> terminées</small>
                  </div>
                  <div class="progress" style="height: 24px; background: rgba(102, 126, 234, 0.1); border-radius: 12px;">
                    <% percentage = data[:total_tasks] > 0 ? (data[:completed_tasks].to_f / data[:total_tasks] * 100).round : 0 %>
                    <div class="progress-bar d-flex align-items-center justify-content-center" style="width: <%= percentage %>%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px; font-size: 12px; font-weight: 500;"><%= percentage %>%</div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <div class="d-flex justify-content-center gap-4 mt-4 pt-3 border-top">
              <div class="d-flex align-items-center">
                <div class="rounded-circle" style="width: 12px; height: 12px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                <span class="ms-2 small">Terminées</span>
              </div>
              <div class="d-flex align-items-center">
                <div class="rounded-circle" style="width: 12px; height: 12px; background: rgba(102, 126, 234, 0.15);"></div>
                <span class="ms-2 small">En cours</span>
              </div>
            </div>
          <% else %>
            <div class="text-center py-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 64px; height: 64px; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="url(#iconGradient)" stroke-width="1.5" stroke-linecap="round"></path>
                  <circle cx="9" cy="7" r="4" stroke="url(#iconGradient)" stroke-width="1.5"></circle>
                </svg>
              </div>
              <p class="text-muted mb-0">Aucune tâche assignée pour le moment</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Nouvelle Tâche -->
<div class="modal fade" id="newTaskModal" tabindex="-1" aria-labelledby="newTaskModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4" style="border: 1px solid rgba(102, 126, 234, 0.2);">
      <div class="modal-header border-0 pb-0">
        <div>
          <h5 class="modal-title fw-medium dashboard-section-title" id="newTaskModalLabel">Créer une nouvelle tâche</h5>
          <p class="text-secondary small mb-0">Ajoute une nouvelle tâche et assigne-la à un membre de la famille</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-3">
        <%= form_with(model: Task.new, url: family_tasks_path(@family), method: :post, local: true) do |f| %>
          <!-- Titre de la tâche -->
          <div class="mb-3">
            <%= f.label :name, "Titre de la tâche", class: "form-label fw-medium" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Ex: Planifier les vacs", required: true %>
          </div>

          <!-- Assigné à -->
          <div class="mb-3">
            <%= f.label :assignee_id, "Assigné à", class: "form-label fw-medium" %>
            <%= f.collection_select :assignee_id, Person.all, :id, :name, { prompt: "Choisir une personne" }, { class: "form-select" } %>
          </div>

          <!-- Créé par (user_id) - caché, on utilisera current_user si disponible -->
          <%= f.hidden_field :user_id, value: User.first&.id %>

          <!-- Date d'échéance -->
          <div class="mb-4">
            <%= f.label :target_date, "Date d'échéance", class: "form-label fw-medium" %>
            <%= f.date_field :target_date, class: "form-control", required: true %>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary w-100">C'est parti !</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .hidden-task {
    display: none !important;
  }

  .task-tab {
    background: transparent;
    border: none;
    color: #6B7280;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .task-tab:hover {
    color: #667eea;
  }

  .task-tab.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    color: white !important;
    border-radius: 0.5rem;
  }

  .task-checkbox .form-check-input {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(102, 126, 234, 0.4);
    cursor: pointer;
  }

  .task-checkbox .form-check-input:checked {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: #667eea;
  }

  .task-checkbox .form-check-input:focus {
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    border-color: rgba(102, 126, 234, 0.5);
  }

  /* Form validation colors */
  .form-control:focus,
  .form-select:focus {
    border-color: rgba(102, 126, 234, 0.5) !important;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25) !important;
  }
</style>

<script>
  function toggleTasks(type) {
    const hiddenTasks = document.querySelectorAll(`[data-task-type="${type}"].hidden-task`);
    const showMoreBtn = document.getElementById(`show-more-${type}`);
    const showLessBtn = document.getElementById(`show-less-${type}`);

    if (showMoreBtn.style.display !== 'none') {
      // Afficher toutes les tâches
      hiddenTasks.forEach(task => {
        task.classList.remove('hidden-task');
      });
      showMoreBtn.style.display = 'none';
      showLessBtn.style.display = 'inline-block';
    } else {
      // Masquer les tâches après les 5 premières
      const allTasks = document.querySelectorAll(`[data-task-type="${type}"]`);
      allTasks.forEach((task, index) => {
        if (index >= 5) {
          task.classList.add('hidden-task');
        }
      });
      showMoreBtn.style.display = 'inline-block';
      showLessBtn.style.display = 'none';
    }
  }
</script>
